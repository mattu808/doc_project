<p id="notice"><%= notice %></p>

<h1>Appointments</h1>
<div>
<%= link_to 'New Appointment', new_appointment_path %>
<%= link_to 'Patients', patients_path %>
<%= link_to 'Physician', physicians_path %>
</div>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Name</th>
      <th>Physician</th>
      <th>Phone</th>
      <th>Notes</th>
      <th>Patient</th>
      <th>Physician</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.date %></td>
        <td><%= appointment.time %></td>
        <td><%= appointment.name %></td>
        <td><%= appointment.physician %></td>
        <td><%= appointment.phone %></td>
        <td><%= appointment.notes %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Delete', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
<%= link_to 'Patients', patients_path %>
<%= link_to 'Physicians', physicians_path %>